<div class="card">
  <div class="card-body">
<%= form_with(model: change_request, local: true) do |form| %>
  <% if change_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(change_request.errors.count, "error") %> prohibited this change_request from being saved:</h2>

      <ul>
      <% change_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group row request_no d-none">
    <label for="request_no" class="col-sm-2 col-form-label">Request Number</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" id="change_request_request_no" placeholder="Request Number" name="change_request[request_no]" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="request_no" class="col-sm-2 col-form-label">Project Name</label>
    <div class="col-sm-6">
      <%= form.text_field :project, class: "form-control", placeholder: "Project Name", required: true %>
    </div>
  </div>
  

  <div class="form-group row">
    <label for="department" class="col-sm-2 col-form-label">Department</label>
    <div class="col-sm-6">
      <%= form.select "department", options_from_collection_for_select(Department.all, "id", "name"), name: "change_request[department]" %>
    </div>
  </div>

  
  <div class="form-group row">
    <label for="telephone" class="col-sm-2 col-form-label">Phone Number</label>
    <div class="col-sm-6">
      <%= form.text_field :telephone, class: "form-control", placeholder: "Phone Number", required: true %>
    </div>
  </div>

  
  <div class="form-group row">
    <label for="description" class="col-sm-2 col-form-label">Change Description</label>
    <div class="col-sm-6">
      <%= form.text_field :description, class: "form-control", placeholder: "Describe the desired Change", required: true %>
    </div>
  </div>

  
  <div class="form-group row">
    <label for="required_date" class="col-sm-2 col-form-label">Date Required</label>
    <div class="col-sm-6">
      <%= form.date_field :required_date, class: "form-control", placeholder: "Required Date", required: true %>

    </div>
  </div>

  <div class="form-group row">
    <label for="reason" class="col-sm-2 col-form-label">Reason for Change</label>
    <div class="col-sm-6">
      <%= form.text_field :reason, class: "form-control", placeholder: "Reason for Change", required: true %>
    </div>
  </div>

  <div class="form-group row">
    <label for="sign_off" class="col-sm-2 col-form-label">Request Sign Off</label>
    <div class="col-sm-6">
      <%= form.text_field :sign_off, class: "form-control", placeholder: "Sign Off", required: true %>

    </div>
  </div>

  
  <div class="form-group row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-6">
      <%= form.submit class: 'btn btn-success' %>
    </div>
  </div>

<% end %>
</div>
</div>

<script>
  $('.request_no').remove();
</script>