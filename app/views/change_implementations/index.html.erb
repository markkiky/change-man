<div class="card">
  <div class="card-body">


<table id="requestsDatatable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Staging results</th>
                <th>Implementation results</th>
                <th>Implementation date</th>
                <th>Sign off</th>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
          <% @change_implementations.each do |change_implementation| %>
            <tr>
              
                
                <td><%= change_implementation.staging_results %></td>
                <td><%= change_implementation.implementation_results %></td>
                <td><%= change_implementation.implementation_date %></td>
                <td><%= change_implementation.sign_off %></td>

                <td>
                  <div class="btn-group" role="group" aria-label="Basic example">
                    <%= link_to 'Show', change_implementation_path(change_implementation.id), class: "btn btn-secondary text-white" %><span class="pr-1"></span>
                    <%= link_to 'Edit', edit_change_implementation_path(change_implementation.id), class: "btn btn-secondary text-white" %><span class="pr-1"></span>
                    <%= link_to 'Change Impact', edit_change_impact_path(change_implementation.id), class: "btn btn-secondary text-white"%>
                    
                  </div>
                  
                </td>
              
            </tr>
            <%end%>
        </tbody>
        <tfoot>
            <tr>
                
                <th>Staging results</th>
                <th>Implementation results</th>
                <th>Implementation date</th>
                <th>Sign off</th>
                <td>Actions</td>

            </tr>
        </tfoot>

  </table>
  </div>
</div>
