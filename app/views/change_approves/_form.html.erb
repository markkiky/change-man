    <%= form.label :scheduled_date %>
    <%= form.date_select :scheduled_date %>
  </div>

  <div class="field">
    <%= form.label :assigned_to %>
    <%= form.text_area :assigned_to %>
  </div>

  <div class="field">
    <%= form.label :sign_off %>
    <%= form.text_field :sign_off %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
